<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iogb.sheduletown.TeacherActivity">

    <ImageView
        android:id="@+id/iv_fondoLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/sp_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        style="@android:style/Widget.Spinner"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

         />

    <ListView
        android:id="@+id/lv_horario"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorWhite"
        android:layout_margin="@dimen/fab_margin"
        android:layout_below="@+id/sp_dia"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:textSize="@dimen/tam_letra"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_below="@id/lv_horario"
        android:background="@color/colorWhite"
        android:gravity="center"/>

</RelativeLayout>
