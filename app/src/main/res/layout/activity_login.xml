<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_s"
    tools:context="com.iogb.sheduletown.LoginActivity">

    <ImageView
        android:id="@+id/iv_fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:layout_alignParentTop="true"
      />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_logoBenemerita"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/logo_benc"
            android:elevation="5sp"
            android:tint="@color/colorAccent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/schedule_town"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/ed_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/ed_usuario"
            android:imeOptions="actionNext"
            android:inputType="text|textAutoComplete"
            android:maxLength="15"
            android:minHeight="50dp"
            android:textSize="@dimen/tam_letra" />

        <EditText
            android:id="@+id/ed_contrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/ed_contrasenia"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:maxLength="15"
            android:minHeight="50dp"
            android:textSize="@dimen/tam_letra" />

        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_redondeado"
            android:minHeight="30dp"
            android:minWidth="150dp"
            android:text="@string/btn_login"
            android:elevation="2sp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/tam_letra"

            />
        <ProgressBar
            android:id="@+id/pg_logging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />
    </LinearLayout>


</RelativeLayout>
